<div id="id01" class="modal">

  <div class="modal-content animate">
    <div class="imgcontainer">
      <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
    </div>

    <div class="xcontainer">
      <label for="uname"><b>Username</b></label>
      <input id="subloguname" type="text" placeholder="Enter Username" name="uname" required>

      <label for="psw"><b>Password</b></label>
      <input id="sublogpassword" type="password" placeholder="Enter Password" name="psw" required>

      <button onclick="subscribelog()">subcribe</button>
      <br><br>
      <p id="failmessage" class="hidden">Invalid login credentials</p>
      <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">Cancel</button>
    <br>
      <br>
    </div>
  </div>
</div>

<div class="desccont">
  <div class="desccont1">
    <div class="image-box">
      <img src="images/SN.jpg" alt="">
    </div>
    {{#if user}}
      <p class="hidden" id="suber">{{user.local.email}}</p>
      <button id="subbedbut" type="button" class="btn btn-success ntb hidden">Subscribed</button>
      <button id="subsbut" onclick="subscribe()" type="button" class="btn btn-primary ntb hidden">Subscribe</button>
    {{else}}
    <button id="zub" onclick="document.getElementById('id01').style.display='block'" class="btn btn-primary ntb">Login to subcribe</button>
    <button id="subbedbut" type="button" class="btn btn-success ntb hidden">Subscribed</button>
      <!-- <a href="/login"><button type="button" class="btn btn-primary ntb">Login to Subscribe</button></a> -->
    {{/if}}
    <!-- <button class="xbtn2"></button> -->
  </div>
  <div class="desccont2">
    <p id="cryid" class="hidden">{{data.id}}</p>
    <h2 class="title"><b id="cryname">{{data.seriesName}}</b></h2>
    <h2 id="cryfa" class="rate"> {{data.firstAired}}</h2>
    <br>
    <p class="sche"><span class="glyphicon glyphicon-calendar"></span><span id="crynet" style="text-transform:uppercase; font-family:'Anton', sans-serif;"> {{data.network}} </span></p>
    <p id="cryview" class="descp">{{data.overview}}</p>
    <p id="crystatus" class="hidden">{{data.status}}</p>
  </div>
</div>
<div class="notify">
  <p><b>Next Episode</b>  -- <span style="font-family:'Anton', sans-serif;"> To Be Announced</span></p>
</div>
